<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme2" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="AppTheme.Launcher">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:windowFullscreen">true</item>
    <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
    <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/etxtborder_bottom</item>
        <item name="android:textColor">@color/editTextColor</item>
        <item name="android:textColorHint">@color/editTextPlaceholderColor</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="AutocompleteTextTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:background">@drawable/etxtborder_bottom</item>
        <item name="android:textColor">@color/editTextColor</item>
        <item name="android:textColorHint">@color/editTextPlaceholderColor</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingBottom">5dp</item>

    </style>

    <style name="EditTextVerify" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/border_bottom_verify</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">1</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/editTextColor</item>
        <item name="android:textColorHint">@color/editTextPlaceholderColor</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ButtonTheme" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/btn_inactive</item>
        <item name="android:textColor">#fff</item>
        <item name="android:padding">15dp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">60dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DateTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:textColorPrimary">#fff</item>
    </style>


</resources>
