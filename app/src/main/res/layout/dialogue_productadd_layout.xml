<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_centerInParent="true"

    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/lay1"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:contentDescription="@string/image"
                android:visibility="gone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/staff_add"
                />
            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/txtTitle"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="Dialogue Title"
                android:textSize="15sp"
                />

        </LinearLayout>

        <LinearLayout
            android:padding="20dp"
            android:id="@+id/layText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/txtInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="product name"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginBottom="20dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"/>
           <LinearLayout
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp"
               android:orientation="horizontal"
               android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <Button
                   android:background="@color/grayColor"
                   android:id="@+id/btnMinus"
                   android:layout_width="wrap_content"
                   android:gravity="center"
                   android:textColor="@color/editTextPlaceholderColor"
                   android:layout_marginRight="20dp"
                   android:layout_height="wrap_content"
                   android:text="-"
                   android:textSize="30sp"
                   android:textStyle="bold"
                   android:layout_marginEnd="10dp"
                   />
               <View
                   android:layout_width="1dp"
                   android:layout_marginEnd="10dp"
                   android:layout_height="match_parent"
                   android:background="@color/divider"/>
               <EditText
                   android:id="@+id/etxtCount"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:imeActionId="30"
                   android:imeOptions="actionNext"
                   android:layout_height="wrap_content"
                   android:hint="Qty"
                   android:gravity="center"
                   android:background="@android:color/transparent"
                   android:inputType="numberSigned"
                   />
               <View
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@color/divider"/>
               <Button
                   android:background="@color/grayColor"
                   android:id="@+id/btnAdd"
                   android:layout_width="wrap_content"
                   android:padding="0dp"
                   android:gravity="center"
                   android:textSize="30sp"
                   android:textColor="@color/editTextPlaceholderColor"
                   android:layout_marginRight="20dp"
                   android:layout_height="wrap_content"
                   android:text="+"
                   android:textStyle="bold"
                   />

           </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"/>


            <LinearLayout
                android:id="@+id/optionLay"
                android:layout_width="match_parent"
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <Button
                    android:background="@android:color/transparent"
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/editTextPlaceholderColor"
                    android:layout_marginEnd="20dp"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textStyle="bold"
                    />
                <Button
                    android:background="@android:color/transparent"
                    android:id="@+id/btnDone"
                    android:layout_width="wrap_content"
                    android:textColor="@color/linkTextColor"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>




</RelativeLayout>