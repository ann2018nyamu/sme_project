<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_centerInParent="true"
    tools:ignore="MissingPrefix"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/lay1"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="Dialogue Title"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="15sp"
                />

        </LinearLayout>

        <LinearLayout
            android:padding="20dp"
            android:id="@+id/layText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilName"
                android:hint="2547xxxxxxxx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/etxtPhone"
                    android:layout_width="match_parent"
                    android:imeActionId="20"
                    android:imeOptions="actionNext"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    style="@style/EditTextTheme"
                    android:inputType="phone"
                    android:textSize="20sp"

                    />
            </android.support.design.widget.TextInputLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/optionLay"
                android:layout_width="match_parent"
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <Button
                    android:background="@android:color/transparent"
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/editTextPlaceholderColor"
                    android:layout_marginEnd="20dp"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_semibold"

                    />
                <Button
                    android:background="@android:color/transparent"
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:textColor="@color/btnActiveFontColor"
                    android:padding="5dp"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_height="wrap_content"
                    android:text="Send Request"
                    android:textStyle="bold" />
            </LinearLayout>
            </LinearLayout>


    </LinearLayout>




</RelativeLayout>